{
  "kind": "collectionType",
  "collectionName": "clients",
  "info": {
    "singularName": "client",
    "pluralName": "clients",
    "displayName": "Client",
    "description": "Clientes/Adquirientes para facturación electrónica"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre_completo": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "tipo_documento": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "CC",
        "NIT",
        "CE",
        "TI",
        "PP",
        "PEP"
      ]
    },
    "numero_documento": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 20
    },
    "digito_verificacion": {
      "type": "string",
      "maxLength": 1,
      "regex": "^[0-9]$"
    },
    "razon_social": {
      "type": "string",
      "maxLength": 255
    },
    "nombre_comercial": {
      "type": "string",
      "maxLength": 255
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "telefono": {
      "type": "string",
      "maxLength": 20
    },
    "direccion": {
      "type": "string",
      "required": true,
      "maxLength": 500
    },
    "ciudad": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "ciudad_codigo": {
      "type": "string",
      "required": true,
      "maxLength": 10
    },
    "departamento": {
      "type": "string",
      "maxLength": 100
    },
    "codigo_postal": {
      "type": "string",
      "maxLength": 10
    },
    "tipo_persona": {
      "type": "enumeration",
      "required": true,
      "default": "Natural",
      "enum": [
        "Natural",
        "Juridica"
      ]
    },
    "regimen_fiscal": {
      "type": "enumeration",
      "required": true,
      "default": "responsable_iva",
      "enum": [
        "responsable_iva",
        "no_responsable_iva",
        "gran_contribuyente",
        "simple"
      ]
    },
    "responsabilidades_fiscales": {
      "type": "json",
      "default": []
    },
    "activo": {
      "type": "boolean",
      "default": true
    },
    "notas": {
      "type": "text"
    },
    "invoices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::invoice.invoice",
      "mappedBy": "client"
    }
  }
}